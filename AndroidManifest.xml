<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.keetab.reader"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name="com.keetab.reader.AppContext"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="com.keetab.reader.LibraryActivity"
            android:label="@string/title_activity_library"
            android:icon="@drawable/home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.keetab.reader.ReaderActivity"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.keetab.reader.StoreActivity"
            android:label="@string/title_activity_store"
            android:icon="@drawable/store"
            android:parentActivityName="com.keetab.reader.LibraryActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.keetab.reader.LibraryActivity" />
        </activity>
        <activity
            android:name="com.keetab.reader.PurchaseActivity"
            android:theme="@android:style/Theme.Holo.Dialog">
        </activity>
    </application>

</manifest>
